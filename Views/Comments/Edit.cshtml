@model WebServer.Models.Comment

@{
    ViewData["Title"] = "Edit";
}


        <h1>Edit Comment</h1>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <div class="form-group">
                        <label asp-for="name" class="control-label"></label>
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="feedback" class="control-label"></label>
                         <textarea rows="4" cols="50" asp-for="feedback" class="form-control"></textarea>
                        <span asp-validation-for="feedback" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="rating" class="control-label"></label>
                        <input asp-for="rating" class="form-control" />
                        <span asp-validation-for="rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
